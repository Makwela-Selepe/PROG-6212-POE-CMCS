@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Coordinator – Pending Claims";
}

<h2>Coordinator – Pending Claims</h2>
<p>
    <a asp-action="History" class="btn btn-outline-secondary">
        View All Claims History
    </a>
</p>

@if (ViewBag.LastAction != null)
{
    <div class="alert alert-info">
        @ViewBag.LastAction
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (!Model.Any())
{
    <p>No pending claims at the moment.</p>
}
else
{
    <h2>Coordinator – Pending Claims</h2>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card border-warning">
                <div class="card-body">
                    <h6 class="card-title">Pending claims</h6>
                    <p class="card-text display-6">@ViewBag.PendingCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-danger">
                <div class="card-body">
                    <h6 class="card-title">Rejected (total)</h6>
                    <p class="card-text display-6">@ViewBag.RejectedCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-secondary">
                <div class="card-body">
                    <h6 class="card-title">Oldest pending claim</h6>
                    @if (ViewBag.OldestPending != null)
                    {
                        <p class="card-text">@((DateTime)ViewBag.OldestPending)</p>
                    }
                    else
                    {
                        <p class="card-text text-muted">No pending claims.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Lecturer</th>
                <th>Email</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
                <th>Submitted</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.LecturerName</td>
                    <td>@c.Email</td>
                    <td>@c.HoursWorked</td>
                    <td>@c.HourlyRate</td>
                    <td>@c.Total</td>
                    <td>@c.CreatedUtc.ToLocalTime()</td>
                    <td>
                        <form asp-action="Verify" asp-route-id="@c.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-success">Verify</button>
                        </form>
                        <form asp-action="Reject" asp-route-id="@c.Id" method="post" class="d-inline ms-1">
                            <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
