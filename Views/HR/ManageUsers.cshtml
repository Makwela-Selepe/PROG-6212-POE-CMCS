@model IEnumerable<ContractMonthlyClaimSystem.Models.AppUser>

@{
    ViewData["Title"] = "Manage Lecturers";
}

<h2>Manage Lecturers</h2>

@if (TempData["HrMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["HrMessage"]
    </div>
}

<p>
    <a asp-action="CreateLecturer" class="btn btn-primary">Add Lecturer</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Hourly Rate</th>
            <th>Status</th>
            <th style="width: 220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.Where(x => x.Role == ContractMonthlyClaimSystem.Models.UserRole.Lecturer))
        {
            <tr>
                <td>@u.Name</td>
                <td>@u.Email</td>
                <td>@u.HourlyRate</td>
                <td>
                    @if (u.IsApproved)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Awaiting approval</span>
                    }
                </td>
                <td>
                    @if (!u.IsApproved)
                    {
                        <form asp-action="ApproveLecturer" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@u.Id" />
                            <button type="submit" class="btn btn-sm btn-success">
                                Approve
                            </button>
                        </form>
                    }

                    <a asp-action="Edit" asp-route-id="@u.Id"
                       class="btn btn-sm btn-outline-primary">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
