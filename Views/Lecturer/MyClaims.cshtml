@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>My Claims</h4>
    <a asp-controller="Claims" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle me-1"></i>New Claim
    </a>
</div>

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
            <h5>No Claims Found</h5>
            <p class="text-muted">You haven't submitted any claims yet.</p>
            <a asp-controller="Claims" asp-action="Create" class="btn btn-primary">Submit Your First Claim</a>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Date Submitted</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Documents</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.CreatedUtc.ToString("dd MMM yyyy")</td>
                                <td>@claim.HoursWorked</td>
                                <td>R @claim.HourlyRate.ToString("N2")</td>
                                <td class="fw-bold">R @claim.Total.ToString("N2")</td>
                                <td>
                                    @switch (claim.Status)
                                    {
                                        case ClaimStatus.Pending:
                                            <span class="badge bg-warning">Pending</span>
                                            break;
                                        case ClaimStatus.Verified:
                                            <span class="badge bg-info">Verified</span>
                                            break;
                                        case ClaimStatus.Approved:
                                            <span class="badge bg-success">Approved</span>
                                            break;
                                        case ClaimStatus.Rejected:
                                            <span class="badge bg-danger">Rejected</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (claim.Uploads?.Any() == true)
                                    {
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
                                                <i class="fas fa-paperclip me-1"></i>@claim.Uploads.Count
                                            </button>
                                            <ul class="dropdown-menu">
                                                @foreach (var file in claim.Uploads)
                                                {
                                                    <li>
                                                        <a class="dropdown-item" href="~/uploads/@file.SavedAs" target="_blank">
                                                            <i class="fas fa-file me-1"></i>@file.FileName
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No files</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}