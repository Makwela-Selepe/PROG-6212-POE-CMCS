@model ContractMonthlyClaimSystem.Models.Claim
@{
    ViewData["Title"] = "Claim Submitted";
}

<div class="card">
    <div class="card-body text-center">
        <i class="fas fa-check-circle text-success fa-4x mb-3"></i>
        <h3>Claim Submitted Successfully!</h3>
        <p class="lead">Your claim has been submitted and is now pending verification.</p>

        <div class="row justify-content-center mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5>Claim Details</h5>
                        <p><strong>Claim ID:</strong> <code>@Model?.Id</code></p>
                        <p><strong>Total Amount:</strong> R @(Model?.Total.ToString("N2"))</p>
                        <p><strong>Status:</strong> <span class="badge bg-warning">Pending</span></p>
                    </div>
                </div>
            </div>
        </div>

        @if (Model?.Uploads?.Count > 0)
        {
            <div class="mb-4">
                <h5>Uploaded Files</h5>
                <div class="list-group">
                    @foreach (var file in Model.Uploads)
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-file @(file.FileName.EndsWith(".pdf") ? "text-danger" : "text-primary") me-2"></i>
                                    @file.FileName
                                </div>
                                <div>
                                    <small class="text-muted me-2">@((file.Size / 1024.0).ToString("N1")) KB</small>
                                    <a href="~/uploads/@file.SavedAs" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <div class="d-grid gap-2 d-md-block">
            <a asp-controller="Claims" asp-action="Create" class="btn btn-primary me-md-2">Submit Another Claim</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Return to Dashboard</a>
        </div>
    </div>
</div>