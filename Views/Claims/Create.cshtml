@model ContractMonthlyClaimSystem.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm">
      <div class="card-header fw-semibold">Submit Monthly Claim</div>
      <div class="card-body">
        @* existing form *@
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="vstack gap-3">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div>
                <label class="form-label">Hours</label>
                <input asp-for="HoursWorked" class="form-control" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>

            <div>
                <label class="form-label">Hourly Rate</label>
                <input asp-for="HourlyRate" class="form-control" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>

            <div>
                <label class="form-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            </div>

            <div>
                <label class="form-label">Attach Documents</label>
                <input type="file" name="files" multiple class="form-control" />
                <div class="form-text">PDF, DOCX, XLSX, PNG, JPG — max 5 MB each.</div>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary">Submit Claim</button>
                <a asp-controller="Lecturer" asp-action="MyClaims" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}