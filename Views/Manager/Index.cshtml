@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Manager – Verified Claims";
}

<h2>Manager – Verified Claims</h2>

<div class="row mb-3">
    <div class="col-md-6">
        <div class="card border-info">
            <div class="card-body">
                <h6 class="card-title">Claims awaiting approval</h6>
                <p class="card-text display-6">@ViewBag.VerifiedCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-success">
            <div class="card-body">
                <h6 class="card-title">Total amount awaiting approval</h6>
                <p class="card-text display-6">@ViewBag.TotalAwaiting</p>
            </div>
        </div>
    </div>
</div>
<p>
    <a asp-action="History" class="btn btn-outline-secondary">
        View All Claims History
    </a>
</p>

@if (ViewBag.LastAction != null)
{
    <div class="alert alert-info">
        @ViewBag.LastAction
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (!Model.Any())
{
    <p>No verified claims awaiting approval.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Lecturer</th>
                <th>Email</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
                <th>Submitted</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.LecturerName</td>
                    <td>@c.Email</td>
                    <td>@c.HoursWorked</td>
                    <td>@c.HourlyRate</td>
                    <td>@c.Total</td>
                    <td>@c.CreatedUtc.ToLocalTime()</td>
                    <td>
                        <form asp-action="Approve" asp-route-id="@c.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                        </form>
                        <form asp-action="Reject" asp-route-id="@c.Id" method="post" class="d-inline ms-1">
                            <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
